{
    "name": "amphp/sync",
    "description": "Mutex, Semaphore, and other synchronization tools for Amp.",
    "keywords": [
        "asynchronous",
        "async",
        "mutex",
        "semaphore",
        "synchronization"
    ],
    "homepage": "https://github.com/amphp/sync",
    "license": "MIT",
    "authors": [
        {
            "name": "Aaron Piotrowski",
            "email": "aaron@trowski.com"
        },
        {
            "name": "Stephen Coakley",
            "email": "me@stephencoakley.com"
        }
    ],
    "minimum-stability": "beta",
    "prefer-stable": true,
    "require": {
        "php": ">=8",
        "amphp/amp": "^3",
        "amphp/parser": "^1",
        "amphp/pipeline": "^1",
        "amphp/byte-stream": "^2",
        "amphp/serialization": "^1",
        "revolt/event-loop": "^0.2"
    },
    "require-dev": {
        "ext-shmop": "*",
        "ext-sysvmsg": "*",
        "phpunit/phpunit": "^9",
        "amphp/phpunit-util": "^3",
        "amphp/php-cs-fixer-config": "^2-dev",
        "psalm/phar": "^4.19"
    },
    "autoload": {
        "psr-4": {
            "Amp\\Sync\\": "src"
        },
        "files": [
            "src/functions.php",
            "src/Pipeline/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Amp\\Sync\\": "test"
        }
    }
}
